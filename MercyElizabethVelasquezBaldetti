#include <iostream>
using namespace std;

int main() {
    int mes;//es una variable
    cout << "Ingrese un numero de mes (1-12): ";//es la cantidad de numeros que se pueden ingresar para poder ejecutar
    cin >> mes;// es la variable para nombrar el mes

switch (mes) {
    case 1://indica el numero de mes
    cout << "Enero" << endl;//indica el nombre del mes
    break;
case 2:
    cout << "Febrero" << endl;
    break;
case 3:
    cout << "Marzo" << endl;
    break;
case 4:
    cout << "Abril" << endl;
    break;
case 5:
    cout << "Mayo" << endl;
    break;
case 6:
    cout << "Junio" << endl;
    break;
case 7:
    cout << "Julio" << endl;
    break;
case 8:
    cout << "Agosto" << endl;
    break;
case 9:
    cout << "Septiembre" << endl;
    break;
case 10:
    cout << "Octubre" << endl;
    break;
case 11:
    cout << "Noviembre" << endl;
    break;
case 12:
    cout << "Diciembre" << endl;
    break;
default:
    cout << "Numero de mes invalido" << endl;
    break;
}
return 0;
}
